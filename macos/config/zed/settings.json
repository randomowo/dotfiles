// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "ui_font_size": 13,
  "ui_font_family": "Mononoki Nerd Font",
  "buffer_font_size": 13,
  "buffer_font_family": "Mononoki Nerd Font",
  "buffer_line_height": {
    "custom": 0.99
  },
  "show_whitespaces": "boundary",
  "remove_trailing_whitespace_on_save": true,
  "base_keymap": "JetBrains",
  "confirm_quit": false,
  "format_on_save": "off",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },
  "preferred_line_length": 120,
  "soft_wrap": "bounded",
  "restore_on_startup": "none",
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "languages": {
    "Go": {
      "formatter": [
        {
          "external": {
            // go install github.com/segmentio/golines@latest
            "command": "golines",
            "arguments": ["-m", "120", "--chain-split-dots", "--ignore-generated"]
          }
        },
        {
          "external": {
            // go install mvdan.cc/gofumpt@latest
            "command": "gofumpt",
            "arguments": ["-extra"]
          }
        }
      ]
    }
  },
  "lsp": {
    "ltex": {
      "settings": {
        "ltex": {
          "language": "auto"
        }
      }
    }
  },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "sql": true,
    "make": true,
    "docker-compose": true,
    "pylsp": true,
    "env": true,
    "basher": true,
    "marksman": true,
    "wgsl": true,
    "vacuum": true,
    "ltex": true
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "llama3.1:8b",
          "display_name": "llama3.1:8b",
          "max_tokens": 32768
        }
      ]
    }
  },
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.1:8b"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
