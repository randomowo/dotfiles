// documentation: https://zed.dev/docs/configuring-zed
{
  "icon_theme": "Zed (Default)",
  "calls": {
    "mute_on_join": true
  },
  "file_types": {
    "env": [".env*"]
  },
  "context_servers": {},
  "helix_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "show_edit_predictions": true,
  "ui_font_size": 13,
  "ui_font_family": "Mononoki Nerd Font",
  "buffer_font_size": 13,
  "agent_font_size": 13,
  "buffer_font_family": "Mononoki Nerd Font",
  "buffer_line_height": {
    "custom": 1.0
  },
  "whitespace_map": {
    "tab": ">"
  },
  "buffer_font_features": {
    "calt": false
  },
  "terminal": {
    "button": true,
    "copy_on_select": false
  },
  "use_system_window_tabs": true,
  "show_whitespaces": "boundary",
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "soft_wrap": "bounded",
  "remove_trailing_whitespace_on_save": true,
  "base_keymap": "JetBrains",
  "confirm_quit": false,
  "format_on_save": "off",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },
  "tabs": {
    "close_position": "left",
    "git_status": true,
    "show_diagnostics": "errors",
    "file_icons": true,
    "activate_on_close": "left_neighbour"
  },
  "autosave": "on_focus_change",
  "ensure_final_newline_on_save": false,
  "restore_on_startup": "none",
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "languages": {
    "Go": {
      "formatter": [
        {
          "external": {
            "command": "gofmt"
          }
        },
        {
          "external": {
            // go install github.com/segmentio/golines@latest
            "command": "golines",
            "arguments": ["-m", "120", "--chain-split-dots", "--ignore-generated"]
          }
        },
        {
          "external": {
            // go install mvdan.cc/gofumpt@latest
            "command": "gofumpt",
            "arguments": ["-extra"]
          }
        }
      ]
    },
    "Shell Script": {
      "formatter": [
        {
          "external": {
            // go install mvdan.cc/sh/v3/cmd/shfmt@latest
            "command": "shfmt",
            "arguments": ["-i", "2"]
          }
        }
      ]
    }
  },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "sql": true,
    "make": true,
    "docker-compose": true,
    "pylsp": true,
    "env": true,
    "basher": true,
    "marksman": true,
    "vacuum": true,
    "nginx": true,
    "git-firefly": true,
    "mcp-server-context7": true
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": true,
    "disabled_globs": []
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "lmstudio",
      "model": "mistralai/devstral-small-2507"
    },
    "inline_alternatives": [],
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-sequential-thinking": {
            "tools": {
              "sequentialthinking": true
            }
          },
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true
            }
          }
        }
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-sequential-thinking": {
            "tools": {
              "sequentialthinking": true
            }
          },
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true
            }
          }
        }
      }
    },
    "default_profile": "write",
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "default_view": "thread",
    "default_model": {
      "provider": "lmstudio",
      "model": "mistralai/devstral-small-2507"
    },
    "single_file_review": true
  }
}
