#!/bin/bash

beep=~/music/sfx/you_suffer.flac

msg="$3 $4"
timer() {
	sleep $time
	notify-send -u normal $msg && mpv $beep > /dev/null
}
case $1 in
	"-s")
		time=$2
		;;
	"-m")
		time=$((( $2 * 60 )))
		;;
	"-h")
		time=$((( $2 * 3600 )))
		;;
	*)
		time=$1
		msg="$2 $3"
		;;
esac
if [[ $time =~ ^[0-9]+$ ]]; then
	timer &
else	
	echo "timernotify [TIME] [MESSAGE]"
	echo "TIME in seconds"
	echo "by rendomowo <randomowo@ya.ru>"
fi

exit 0
