#!/bin/bash

beep=~/media/music/sfx/you_suffer.flac

flag=2
timer() {
	sleep $time
	notify-send -u normal "$title" "$msg" && mpv $beep > /dev/null
}
case $1 in
	"-s")
		time=$2
		flag=3
		;;
	"-m")
		time=$((( $2 * 60 )))
		flag=3
		;;
	"-h")
		time=$((( $2 * 3600 )))
		flag=3
		;;
	*)
		time=$1
		;;
esac
title="$(echo $@ | cut -d' ' -f$flag)"
(( flag++ ))
msg="$(echo $@ | cut -d' ' -f$flag-)"
if [[ $time =~ ^[0-9]+$ ]]; then
	timer &
else	
	echo "timernotify [TIME] [MESSAGE]"
	echo "TIME in seconds"
	echo "by rendomowo <randomowo@ya.ru>"
fi

exit 0
